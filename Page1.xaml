<Page x:Class="FirebaseTicTacToe.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirebaseTicTacToe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <StackPanel Margin="0,0,0,17" Background="#FF000312" Width="300" Height="300">
        <Label Content="Firebase TicTacToe" HorizontalAlignment="Center"/>
        <TextBox x:Name="txtBoxName" Text="New Game" TextWrapping="Wrap" Width="324"/>
        <Button x:Name="btnHost" Content="Host New Game" Click="btnHost_Click" Background="#FFB7CCD6"/>
        <ListBox x:Name="listBoxGames" Height="100" Background="#FFD2F3FF"/>
        <Button x:Name="btnConnect" Content="Connect to selected Game" Click="btnConnect_Click" Background="#FFB7CCD6"/>
    </StackPanel>
</Page>
